---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/onest';
// Define what are the Dinamic Propeties of this component
interface Props {
	title: string;
	description: string;
}

// Getting the parameters that we are expecting from Astro, if any other component try to use ourself
// Astro will pass the parameters to us in this way, but is and object so we need to deconstructed.
const { title, description} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body> 
		<div class="absolute top-0 z-[-2] min-h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header />
		<slot />
		<Footer />
	</body>

	
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Onest variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	
	body {
		background-color: #0a0a0a;
		display: flex;
		flex-direction: column;
		height: 100vh;
	}

	@media (prefers-reduce-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
